<vinylplz>
    <!-- =============== IZY_RMP_556pack ======================
    IZY WEAPON							: VANILLA WEAPON    -->
    
    <!-- ================ Tier 0 ==============================
    IZYgunT0SNIPERpipeAR15Broken15Junk : gunRifleT0PipeRifle 
    -->
    <!-- These are always unlocked.  See also recipes.xml -->
    <remove xpath ="items/item[@name='IZYgunT0SNIPERpipeAR15Broken15Junk']/property[@name='UnlockedBy']"/>

    <!-- ================ Tier 1 =========================== 
    IZYgunT1ARCabineM608SurvivalRifle   : gunMGT1AK47
    IZYgunT1ARCabineMASFARifle          : gunMGT1AK47 (Notready_ICON)
    IZYgunT1LRLongRifleM16a1            : gunMGT1AK47 (Notready_ICON)
    -->
    <!-- Set the UnlockedBy attribute for each weapon -->
    <setattribute xpath="items/item[@name='IZYgunT1ARCabineM608SurvivalRifle']/property[@name='UnlockedBy']" name="value">gunMGT1AK47Schematic,perkAutoRifleCrafting</setattribute>
    <setattribute xpath="items/item[@name='IZYgunT1ARCabineMASFARifle']/property[@name='UnlockedBy']" name="value">gunMGT1AK47Schematic,perkAutoRifleCrafting</setattribute>
    <setattribute xpath="items/item[@name='IZYgunT1LRLongRifleM16a1']/property[@name='UnlockedBy']" name="value">gunMGT1AK47Schematic,perkAutoRifleCrafting</setattribute>

    <!-- Update the related vanilla Schematics to unlock the IZY weapons -->
    <append xpath="/items/item[@name='gunMGT1AK47Schematic']/effect_group">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT1ARCabineM608SurvivalRifle" operation="set" value="1"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT1ARCabineMASFARifle" operation="set" value="1"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT1LRLongRifleM16a1" operation="set" value="1"/>
    </append>

    <!-- ================ Tier 2 ============================= 
    IZYgunT2ARCabineCAR15   : gunMGT2TacticalAR
    IZYgunT2LMGLMG36        : gunMGT2TacticalAR
    -->
    <!-- Set the UnlockedBy attribute for each weapon -->
    <setattribute xpath="items/item[@name='IZYgunT2ARCabineCAR15']/property[@name='UnlockedBy']" name="value">gunMGT2TacticalARSchematic,perkAutoRifleCrafting</setattribute>
    <setattribute xpath="items/item[@name='IZYgunT2LMGLMG36']/property[@name='UnlockedBy']" name="value">gunMGT2TacticalARSchematic,perkAutoRifleCrafting</setattribute>
    
    <!-- Update the related vanilla Schematics to unlock the IZY weapons -->
    <append xpath="/items/item[@name='gunMGT2TacticalARSchematic']/effect_group">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT2ARCabineCAR15" operation="set" value="1"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT2LMGLMG36" operation="set" value="1"/>
    </append>

    <!-- ================ Tier 3 ========================= 
    IZYgunT3ARCabineM4Carbine           : gunMGT3M60
    IZYgunT3AREUCabineSG552             : gunMGT3M60 (Notready_ICON)
    IZYgunT3BULLPUPHellionVHS2          : gunMGT3M60
    IZYgunT3LMGM249FNminimi             : gunMGT3M60
    IZYgunT3MarksManRifle556M16A2DMR    : gunRifleT3SniperRifle
    -->
    <!-- Set the UnlockedBy attribute for each weapon -->
    <setattribute xpath="items/item[@name='IZYgunT3ARCabineM4Carbine']/property[@name='UnlockedBy']" name="value">gunMGT3M60Schematic,perkAutoRifleCrafting</setattribute>
    <setattribute xpath="items/item[@name='IZYgunT3AREUCabineSG552']/property[@name='UnlockedBy']" name="value">gunMGT3M60Schematic,perkAutoRifleCrafting</setattribute>
    <setattribute xpath="items/item[@name='IZYgunT3BULLPUPHellionVHS2']/property[@name='UnlockedBy']" name="value">gunMGT3M60Schematic,perkAutoRifleCrafting</setattribute>
    <setattribute xpath="items/item[@name='IZYgunT3LMGM249FNminimi']/property[@name='UnlockedBy']" name="value">gunMGT3M60Schematic,perkAutoRifleCrafting</setattribute>
    <setattribute xpath="items/item[@name='IZYgunT3MarksManRifle556M16A2DMR']/property[@name='UnlockedBy']" name="value">gunRifleT3SniperRifleSchematic,perkRifleCrafting</setattribute>

    <!-- Update the related vanilla Schematics to unlock the IZY weapons -->
    <append xpath="/items/item[@name='gunMGT3M60Schematic']/effect_group">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT3ARCabineM4Carbine" operation="set" value="1"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT3AREUCabineSG552" operation="set" value="1"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT3BULLPUPHellionVHS2" operation="set" value="1"/>
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT3LMGM249FNminimi" operation="set" value="1"/>
    </append>
    <append xpath="/items/item[@name='gunRifleT3SniperRifleSchematic']/effect_group">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT3MarksManRifle556M16A2DMR" operation="set" value="1"/>
    </append>


    <!-- ================ Tier 4 ======================== 
    IZYgunT4ARCabineHK416           : (gunMGT3M60)
    IZYgunT4BULLPUPFNF2000          : (gunMGT3M60)
    IZYgunT4MarksManRifle556SSMAR15 : (gunRifleT3SniperRifle) (Notready_ICON)
    -->
    <!-- Set the UnlockedBy attribute to Schematic only -->
    <setattribute xpath="items/item[@name='IZYgunT4ARCabineHK416']/property[@name='UnlockedBy']" name="value">IZYgunT4ARCabineHK416Schematic</setattribute>
    <setattribute xpath="items/item[@name='IZYgunT4BULLPUPFNF2000']/property[@name='UnlockedBy']" name="value">IZYgunT4BULLPUPFNF2000Schematic</setattribute>
    <setattribute xpath="items/item[@name='IZYgunT4MarksManRifle556SSMAR15']/property[@name='UnlockedBy']" name="value">IZYgunT4MarksManRifle556SSMAR15Schematic</setattribute>
    <!-- Add new Schematics to unlock the Tier 4 IZY weapons -->
    <append xpath="/items">
        <item name="IZYgunT4ARCabineHK416Schematic">
            <property name="Extends" value="schematicNoQualityMaster"/>
            <property name="CreativeMode" value="Player"/>
            <property name="CustomIcon" value="IZYgunT4ARCabineHK416"/>
            <property name="Unlocks" value="IZYgunT4ARCabineHK416"/>
            <effect_group tiered="false">
                <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT4ARCabineHK416" operation="set" value="1"/>
                <triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
            </effect_group>
        </item>
        <item name="IZYgunT4BULLPUPFNF2000Schematic">
            <property name="Extends" value="schematicNoQualityMaster"/>
            <property name="CreativeMode" value="Player"/>
            <property name="CustomIcon" value="IZYgunT4BULLPUPFNF2000"/>
            <property name="Unlocks" value="IZYgunT4BULLPUPFNF2000"/>
            <effect_group tiered="false">
                <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT4BULLPUPFNF2000" operation="set" value="1"/>
                <triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
            </effect_group>
        </item>
        <item name="IZYgunT4MarksManRifle556SSMAR15Schematic">
            <property name="Extends" value="schematicNoQualityMaster"/>
            <property name="CreativeMode" value="Player"/>
            <property name="CustomIcon" value="Notready_ICON"/>
            <property name="Unlocks" value="IZYgunT4MarksManRifle556SSMAR15"/>
            <effect_group tiered="false">
                <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="IZYgunT4MarksManRifle556SSMAR15" operation="set" value="1"/>
                <triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
            </effect_group>
        </item>
    </append>

    <!-- ================ Ammo ========================== 
    ammo556mmBulletBall             : ammo762mmBulletBall
    ammo556mmHIpower                : ammo762mmBulletHP
    ammo556mmArmorPiercing          : ammo762mmBulletAP
    ammo556mmBulletBallBundle       : ammoBundle762mmBulletBall
    ammo556mmHIpowerBundle          : ammoBundle762mmBulletHP
    ammo556mmArmorPiercingBundle    : ammoBundle762mmBulletAP
    -->
    <!--556 ammo does not have an "UnlockedBy" property, so we must add one manually -->
    <append xpath="items/item[@name='ammo556mmBulletBall']">
        <property name="UnlockedBy" value="ammo762mmBulletBallSchematic,perk762mmCrafting"/>
    </append>
    <append xpath="items/item[@name='ammo556mmHIpower']">
        <property name="UnlockedBy" value="ammo762mmBulletHPSchematic,perk762mmCrafting"/>
    </append>
    <append xpath="items/item[@name='ammo556mmArmorPiercing']">
        <property name="UnlockedBy" value="ammo762mmBulletAPSchematic,perk762mmCrafting"/>
    </append>

    <!-- ammo bundles are only unlocked through crafting perks -->
    <append xpath="items/item[@name='ammo556mmBulletBallBundle']">
        <property name="UnlockedBy" value="perk762mmCrafting"/>
    </append>
    <append xpath="items/item[@name='ammo556mmHIpowerBundle']">
        <property name="UnlockedBy" value="perk762mmCrafting"/>
    </append>
    <append xpath="items/item[@name='ammo556mmArmorPiercingBundle']">
        <property name="UnlockedBy" value="perk762mmCrafting"/>
    </append>

    <!-- Update the related vanilla Schematics to unlock the IZY ammo -->
    <append xpath="/items/item[@name='ammo762mmBulletBallSchematic']/effect_group">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="ammo556mmBulletBall" operation="set" value="1"/>
    </append>
    <append xpath="/items/item[@name='ammo762mmBulletHPSchematic']/effect_group">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="ammo556mmHIpower" operation="set" value="1"/>
    </append>
    <append xpath="/items/item[@name='ammo762mmBulletAPSchematic']/effect_group">
        <triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="ammo556mmArmorPiercing" operation="set" value="1"/>
    </append>

</vinylplz>