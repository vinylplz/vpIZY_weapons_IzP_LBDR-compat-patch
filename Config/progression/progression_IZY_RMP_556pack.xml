<vinylplz>
    <!-- =============== IZY_RMP_556pack ======================
    IZY WEAPON							: VANILLA WEAPON    -->
    
    <!-- ================ Tier 0 ==============================
    IZYgunT0SNIPERpipeAR15Broken15Junk : gunRifleT0PipeRifle 
    -->
    <!-- T0 weapons are always unlocked, but still need to be added to perkGunsmithCrafting to enabled higher-quality crafting -->
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'gunRifleT0PipeRifle')]/@tags" op="Add">IZYgunT0SNIPERpipeAR15Broken15Junk</csv>

    <!-- ================ Tier 1 =========================== 
    IZYgunT1ARCabineM608SurvivalRifle   : gunMGT1AK47
    IZYgunT1ARCabineMASFARifle          : gunMGT1AK47 (Notready_ICON)
    IZYgunT1LRLongRifleM16a1            : gunMGT1AK47 (Notready_ICON)
    -->
    <!-- The following line adds the T1 IZY ARs to any perks that gunMGT1AK47 (vanilla) is in, namely:		
            * perkGunsmithCrafting: enables crafting higher quality guns
            * perkAutoRifleCrafting: unlocks crafting ARs
        The rest of the file follows the same pattern.
    -->
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'gunMGT1AK47')]/@tags" op="Add">IZYgunT1ARCabineM608SurvivalRifle</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'gunMGT1AK47')]/@tags" op="Add">IZYgunT1ARCabineMASFARifle</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'gunMGT1AK47')]/@tags" op="Add">IZYgunT1LRLongRifleM16a1</csv>

    <!-- ================ Tier 2 ============================= 
    IZYgunT2ARCabineCAR15   : gunMGT2TacticalAR
    IZYgunT2LMGLMG36        : gunMGT2TacticalAR
    -->
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'gunMGT2TacticalAR')]/@tags" op="Add">IZYgunT2ARCabineCAR15,IZYgunT2LMGLMG36</csv>

    <!-- ================ Tier 3 ========================= 
    IZYgunT3ARCabineM4Carbine           : gunMGT3M60
    IZYgunT3AREUCabineSG552             : gunMGT3M60 (Notready_ICON)
    IZYgunT3BULLPUPHellionVHS2          : gunMGT3M60
    IZYgunT3LMGM249FNminimi             : gunMGT3M60
    IZYgunT3MarksManRifle556M16A2DMR    : gunRifleT3SniperRifle
    -->
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'gunMGT3M60')]/@tags" op="Add">IZYgunT3ARCabineM4Carbine,IZYgunT3BULLPUPHellionVHS2,IZYgunT3LMGM249FNminimi</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'gunMGT3M60')]/@tags" op="Add">IZYgunT3AREUCabineSG552</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'gunRifleT3SniperRifle')]/@tags" op="Add">IZYgunT3MarksManRifle556M16A2DMR</csv>

    <!-- ================ Tier 4 ======================== 
    IZYgunT4ARCabineHK416           : (gunMGT3M60)
    IZYgunT4BULLPUPFNF2000          : (gunMGT3M60)
    IZYgunT4MarksManRifle556SSMAR15 : (gunRifleT3SniperRifle) (Notready_ICON)
    -->
    <!-- T4 weapons are only unlocked from Schematics, but still need to be added to perkGunsmithCrafting to enabled higher-quality crafting -->
    <csv xpath="/progression/perks/perk[@name='perkGunsmithCrafting']/effect_group/passive_effect[@name='CraftingTier']/@tags" op="Add">IZYgunT4ARCabineHK416,IZYgunT4BULLPUPFNF2000</csv>
    <csv xpath="/progression/perks/perk[@name='perkGunsmithCrafting']/effect_group/passive_effect[@name='CraftingTier']/@tags" op="Add">IZYgunT4MarksManRifle556SSMAR15</csv>

    <!-- ================ Ammo ========================== 
    ammo556mmBulletBall             : ammo762mmBulletBall
    ammo556mmHIpower                : ammo762mmBulletHP
    ammo556mmArmorPiercing          : ammo762mmBulletAP
    ammo556mmBulletBallBundle       : ammoBundle762mmBulletBall
    ammo556mmHIpowerBundle          : ammoBundle762mmBulletHP
    ammo556mmArmorPiercingBundle    : ammoBundle762mmBulletAP
    -->
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammo762mmBulletBall')]/@tags" op="Add">ammo556mmBulletBall</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammo762mmBulletHP')]/@tags" op="Add">ammo556mmHIpower</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammo762mmBulletAP')]/@tags" op="Add">ammo556mmArmorPiercing</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammoBundle762mmBulletBall')]/@tags" op="Add">ammo556mmBulletBallBundle</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammoBundle762mmBulletHP')]/@tags" op="Add">ammo556mmHIpowerBundle</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammoBundle762mmBulletAP')]/@tags" op="Add">ammo556mmArmorPiercingBundle</csv>

</vinylplz>
