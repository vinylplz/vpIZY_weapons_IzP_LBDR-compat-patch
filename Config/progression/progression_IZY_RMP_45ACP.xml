    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammo9mmBulletBall')]/@tags" op="Add">ammo45ACPBulletBall</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammo9mmBulletHP')]/@tags" op="Add">ammo45ACPHighpower</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammo9mmBulletAP')]/@tags" op="Add">ammo45ACPArmorpiecing</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammo9mmBulletAP')]/@tags" op="Add">ammo45ACPEnhanced</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammoBundle9mmBulletBall')]/@tags" op="Add">ammoBundle45ACPBulletBall</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammoBundle9mmBulletHP')]/@tags" op="Add">ammoBundle45ACPHighpower</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammoBundle9mmBulletAP')]/@tags" op="Add">ammoBundle45ACPArmorpiecing</csv>
    <csv xpath="/progression/perks/perk/effect_group/passive_effect[contains(@tags,'ammoBundle9mmBulletAP')]/@tags" op="Add">ammoBundle45ACPEnhanced</csv>
    
