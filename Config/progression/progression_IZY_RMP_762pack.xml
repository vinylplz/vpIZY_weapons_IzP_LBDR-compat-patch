    <csv xpath="/progression/perks/perk[@name='perkGunsmithCrafting']/effect_group/passive_effect[@name='CraftingTier']/@tags" op="Add">IZYgunT4BattleRifleSCARH,IZYgunT4LMGlightmachinegunMG34R</csv>
    <csv xpath="/progression/perks/perk[@name='perkGunsmithCrafting']/effect_group/passive_effect[@name='CraftingTier']/@tags" op="Add">IZYgunT4MarksManRifle762SVUprototypeRifle,IZYgunT4MarksManRifleM110SASS,IZYgunT4SNIPERRIFLE762L96AWMRifle</csv>

